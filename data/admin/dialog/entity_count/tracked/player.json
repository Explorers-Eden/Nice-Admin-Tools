{
  "type": "minecraft:confirmation",
  "title": "Nice Admin Tools: Tracked Entity Count",
  "external_title": "Nice Admin Tools: Tracked Entity Count",
  "body": {
    "type": "minecraft:plain_message",
    "contents": {
      "text": "Track Entities At A Specific Player's Position",
      "color": "gray"
    }
  },
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "player",
      "label": "Playername:",
      "initial": "MyCoolUsername",
      "max_length": 16
    },
    {
      "type": "minecraft:text",
      "key": "mobtype",
      "label": "Namespaced Entity Or Entity Tag List:",
      "initial": "minecraft:leave_if_all_entities"
    },
    {
      "type": "minecraft:number_range",
      "key": "distance",
      "label": "Distance",
      "label_format": "%s: %s Blocks",
      "start": 1,
      "end": 1024,
      "step": 1,
      "initial": 128
    },
    {
      "type": "minecraft:number_range",
      "key": "duration",
      "label": "Duration",
      "label_format": "%s: %s Minutes",
      "start": 1,
      "end": 60,
      "step": 1,
      "initial": 5
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "close",
  "yes": {
    "label": "Confirm",
    "action": {
      "type": "minecraft:dynamic/run_command",
      "template": "function admin:entity_count/tracked/player {player:$(player),mobtype:'$(mobtype)',distance:$(distance),duration:$(duration)}"
    }
  },
  "no": {
    "label": "Back",
    "action": {
      "type": "minecraft:show_dialog",
      "dialog": "admin:entity_count/tracked/main"
    }
  }
}