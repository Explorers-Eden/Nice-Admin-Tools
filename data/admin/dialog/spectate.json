{
  "type": "minecraft:confirmation",
  "title": "Nice Admin Tools: Player Spectate",
  "external_title": "Nice Admin Tools: Player Spectate",
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "name",
      "label": "Name Of The Player:",
      "initial": "MyCoolUsername",
      "max_length": 16
    },
    {
      "type": "minecraft:boolean",
      "key": "night_vision",
      "label": "Apply Night Vision",
      "initial": true,
      "on_true": "1",
      "on_false": "0"
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "close",
  "yes": {
    "label": "Confirm",
    "action": {
      "type": "minecraft:dynamic/run_command",
      "template": "function admin:spectate/init {name:$(name),night_vision:$(night_vision)}"
    }
  },
  "no": {
    "label": "Back",
    "action": {
      "type": "minecraft:show_dialog",
      "dialog": "admin:menu"
    }
  }
}