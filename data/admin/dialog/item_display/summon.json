{
  "type": "minecraft:confirmation",
  "title": "Nice Admin Tools: Create Item Display",
  "external_title": "Nice Admin Tools: Create Item Display",
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "item",
      "label": "Namespaced Item:",
      "initial": "minecraft:egg"
    },
    {
      "type": "minecraft:number_range",
      "key": "size",
      "label": "Size",
      "label_format": "options.percent_value",
      "start": 1,
      "end": 200,
      "step": 1,
      "initial": 100
    },
    {
      "type": "minecraft:single_option",
      "key": "billboard",
      "label": "Billboard",
      "options": [
        {
          "id": "fixed",
          "display": "Fixed",
          "initial": true
        },
        {
          "id": "vertical",
          "display": "Vertical",
          "initial": false
        },
        {
          "id": "horizontal",
          "display": "Horizontal",
          "initial": false
        },
        {
          "id": "center",
          "display": "Center",
          "initial": false
        }
      ]
    },
    {
      "type": "minecraft:single_option",
      "key": "glowing",
      "label": "Glowing",
      "options": [
        {
          "id": "1",
          "display": {
            "text": "True",
            "color": "green"
          }
        },
        {
          "id": "0",
          "display": {
            "text": "False",
            "color": "red"
          },
          "initial": true
        }
      ]
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "close",
  "yes": {
    "label": "Confirm",
    "action": {
      "type": "minecraft:dynamic/run_command",
      "template": "function admin:item_display/summon/init {billboard:$(billboard),item:'$(item)',size:$(size),glowing:$(glowing)}"
    }
  },
  "no": {
    "label": "Back",
    "action": {
      "type": "minecraft:show_dialog",
      "dialog": "admin:item_display/main"
    }
  }
}