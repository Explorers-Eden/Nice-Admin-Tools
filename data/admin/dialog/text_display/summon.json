      "type": "minecraft:dynamic/run_command",
      "template": "function admin:text_display/summon/init {billboard:$(billboard),text:'$(text)',color:$(color),bold:$(bold),italic:$(italic),size:$(size),alignment:$(alignment),background:$(background),see_through:$(see_through)}"
    }
